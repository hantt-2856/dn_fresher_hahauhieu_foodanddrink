<% provide :title, t("log_in") %>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for :session, url: login_path, html: {class: "login100-form validate-form"} do |f| %>
        <span class="login100-form-title p-b-43">
          <%= t "log_in" %>
        </span>
        <div class="wrap-input100 validate-input" data-validate =<%= t(".email_req") %>>
          <%= f.email_field :email, class: "input100", placeholder: t(".email")%>
          <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate =<%= t(".password_req") %>>
          <%= f.password_field :password, class: "input100", placeholder: t(".password")%>
          <span class="focus-input100"></span>
        </div>
        <div class="flex-sb-m w-full p-t-3 p-b-32">
          <div class="contact100-form-checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span><%= t ".remember_me"%></span>
            <% end %>
          </div>
          <div>
            <%= link_to t(".forgot_password"), class: "txt1" %>
          </div>
        </div>
        <div class="container-login100-form-btn">
          <%= f.submit t("log_in"), class: "login100-form-btn" %>
        </div>
        <div class="text-center p-t-46 p-b-20">
          <span class="txt2">
            <%= link_to t("sign_up"), "#" %>
          </span>
        </div>
      <% end %>
      <div class="login100-more" >
        <%= image_tag "banner.jpg", class: "w-75, h-100",style:"object-fit: cover" %>
      </div>
    </div>
  </div>
</div>
