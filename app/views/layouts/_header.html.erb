<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="header__top__left">
            <ul>
              <li><i class="bi bi-envelope-fill"></i> hahieuhau@gmail.com</li>
              <li><%= t ".free_ship" %></li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div class="header__top__right">
            <div class="header__top__right__language">
              <%= image_tag "language.png" %>
              <div><%= t ".english" %></div>
              <span class="arrow_carrot-down"></span>
              <ul>
                <%= link_to t(".english"), locale: :en %>
                <%= link_to t(".vietnamese"), locale: :vi %>
              </ul>
            </div>
            <% if logged_in? %>
              <div class="header__top__right__auth">
                <%= link_to current_user.email, current_user %>
              </div>
              <div class="header__top__right__auth">
                <%= link_to logout_path, method: :delete do %>
                  <i class="bi bi-box-arrow-left text-dark"></i>
                  <%= t("logout") %>
                <% end %>
              </div>
            <% else %>
              <div class="header__top__right__auth">
                <%= link_to login_path do %>
                  <i class="fa fa-user text-dark"></i>
                  <%= t(".login") %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="header__logo">
          <%= link_to home_path do %>
            <%= image_tag "logo.png" %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6">
        <nav class="header__menu">
          <ul>
            <li class="active"><%= link_to t(".home"), root_path %></li>
            <li><%= link_to t(".shop"), "#" %></li>
            <li><%= link_to t(".pages"), "#" %>
              <ul class="header__menu__dropdown">
                <li><%= link_to t(".shopping_cart"), "#" %></li>
                <li><%= link_to t(".checkout"), "#" %></li>
              </ul>
            </li>
            <li><%= link_to t(".contact"), "#" %></li>
          </ul>
        </nav>
      </div>
      <div class="col-lg-3">
        <div class="header__cart">
          <ul>
            <li>
              <%= link_to "#" do %>
                <i class="bi bi-cart4"></i> <span>3</span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
